<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionXpathFilter Experimental Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2_xpath_experimental.dtd">

<suppressions>
    <suppress-xpath checks="HideUtilityClassConstructor"
                    query="//CLASS_DEF[.//ANNOTATION[./IDENT[@text='UtilityClass' or @text='NoArgsConstructor']]]" />
    <suppress-xpath checks="VisibilityModifier"
                    query="//CLASS_DEF[.//ANNOTATION[./IDENT[@text='UtilityClass']]]//*" />
    <suppress-xpath checks="AbbreviationAsWordInName"
                    query="//CLASS_DEF[.//ANNOTATION[./IDENT[@text='UtilityClass']]]//*" />
    <suppress-xpath checks="MemberName"
                    query="//CLASS_DEF[.//ANNOTATION[./IDENT[@text='UtilityClass']]]//*" />
</suppressions>
